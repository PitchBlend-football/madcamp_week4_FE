                    <TextView
                        android:id="@+id/recent_encounters_text_draw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="11dp"
                        android:text="DRAW"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/recent_encounters_card_draw"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/recent_encounters_card_draw" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/recent_encounters_card_away"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="5dp"
                        app:cardBackgroundColor="#267DFF"
                        app:cardCornerRadius="7dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/recent_encounters_text_away"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/recent_encounters_card_away_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/recent_encounters_text_away"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WIN"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/recent_encounters_card_away"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/recent_encounters_card_away" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/top_scorers_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Scorers"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_card_home"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@+id/top_scorers_title"
                    app:layout_constraintEnd_toStartOf="@+id/top_scorers_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/top_scorers_title" />

                <TextView
                    android:id="@+id/top_scorers_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
