                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintEnd_toEndOf="@+id/image_card_home"
                    app:layout_constraintStart_toStartOf="@+id/image_card_home"
                    app:layout_constraintTop_toBottomOf="@+id/image_card_home" />

                <ImageView
                    android:id="@+id/image_card_away"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@+id/top_scorers_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/top_scorers_title"
                    app:layout_constraintTop_toTopOf="@+id/top_scorers_title" />

                <TextView
                    android:id="@+id/top_scorers_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
